<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".exampletwo">
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/loginHeaderImageView"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/footer"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loginMyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ECOAPP"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/white"
            android:fontFamily="@font/myfont"
            android:textAlignment="center"
            android:layout_marginTop="60dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loginMySubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login view"
            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:textColor="#0CEA7B"
            android:fontFamily="@font/myfont"
            android:textAlignment="center" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="16dp"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ingrese su correo electronico"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:hint="Ingrese su contrasena"/>

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logint_btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ingresar"
                android:textSize="22dp"
                android:padding="6dp"
                android:drawableEnd="@drawable/ic_lock_idle_lock"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>